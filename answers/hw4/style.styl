backgroundImg = url(sources/images/bg-default.jpg);

* {
  margin: 0;
}

/* background settings */
body {
  background: backgroundImg;
  background-attachment: fixed;
  
  main {
    background: rgba(0, 0, 0, 0.5);
    min-height: 100vh;
  }
}

/* flex aPrview box */
main {
  display: inline-flex;
  align-content: center;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 40px;
}


/* aPrview settings */
.aPreview {
  width: 300px;
  margin-bottom: 25px;
  /* videoPreview settings */
  .videoPreview {
    img {
      width: 100%;
    }
  }
  
  /* playerDescription settings */
  .playerDescription {
    background-color: rgba(0, 0, 0, 0.2);
    display: flex;
    /* player img */
    img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      opacity: 50%;
      padding: 10px;
    }
    
    .channelIntro {
      display: flex;
      flex-direction: column;
      padding: 6px;
      
      .channelName, .playerName {
        padding: 4px;
      
        /* text setting */
        color: white;
        white-space: nowrap;
        /* longer word hidden */
        width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }
  }
}
  
/* aPreview hover transition settings */
.aPreview {
  transition-property: box-shadow, filter;
  transition-duration: 0.5s;
  &:hover {
    box-shadow: 10px 6px 20px 4px rgba(0, 0, 0, 0.8);
    filter: brightness(1.3);
  }
}
